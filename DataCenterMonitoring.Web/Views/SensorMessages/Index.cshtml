@using DataCenterLibrary.Models
@using System.Windows.Forms.DataVisualization.Charting

@using Highsoft.Web.Mvc.Charts
@using Highsoft.Web.Mvc.Charts.Rendering;
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
@using DataCenterMonitoring.Web.Paging
@*@model IEnumerable<DataCenterLibrary.Models.Sensor>*@
@model PaginatedList<DataCenterLibrary.Models.Sensor>

@{
    ViewData["Title"] = "Index";
}

<h1>Messages</h1>

<a asp-action="DownloadCsv"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="@ViewData["CurrentFilter"]"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    Download CSV
</a>
<a asp-action="DownloadJSON"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="@ViewData["CurrentFilter"]"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    DownloadJSON
</a>
</br>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    All
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="PowerSensor"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    Power
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="TemperatureSensor"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    Temperature
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="HumiditySensor"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    Humidity
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="VoltageSensor"
   asp-route-pageNumber="@(Model.PageIndex)"
   class="btn btn-light">
    Voltage
</a>

<div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-typeFiltered="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["IdSortParm"]">Id</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-typeFiltered="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["TypeSortParm"]">SensorType</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-typeFiltered="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["ValueSortParm"]">Value</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-typeFiltered="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["UnitSortParm"]">Unit</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-typeFiltered="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["DateSortParm"]">Date</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SensorType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="@ViewData["CurrentFilter"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-light @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-typeFiltered="@ViewData["CurrentFilter"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-light @nextDisabled">
    Next
</a>
